<% content_for :title, "New Reservation" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">New Reservation</h1>
      <p class="mt-2 text-sm text-gray-600">
        Create a new reservation for the week of <%= @reservation_week.res_date.strftime("%B %d, %Y") %>
      </p>
    </div>

    <!-- Admin Note (if exists) -->
    <% if @reservation_week.note.present? %>
      <div class="mb-8 bg-blue-50 border border-blue-200 rounded-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-blue-800">Special Instructions</h3>
            <div class="mt-2 text-sm text-blue-700">
              <%= simple_format(@reservation_week.note) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form -->
    <div class="bg-white shadow-sm rounded-lg p-6">
      <%= render "form", reservation: @reservation %>
    </div>
  </div>
</div>
