      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold">Quick Links</h4>
        <nav class="space-y-2">
          <%= link_to "Home", root_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
          <%= link_to "Membership Info", membership_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
          <%= link_to "Guest FAQ", guest_faq_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
          <%= link_to "AT Week Info", at_week_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
          <%= link_to "Volleyball", volleyball_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
          <%= link_to "Payment Information", payment_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
        </nav>
      </div>

      <!-- Member Resources -->
      <% if user_signed_in? %>
        <div class="space-y-4">
          <h4 class="text-lg font-semibold">Member Resources</h4>
          <nav class="space-y-2">
            <%= link_to "Current Week", app_reservation_week_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
            <%= link_to "All Reservation Weeks", reservation_weeks_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
            <%= link_to "My Profile", profile_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
            <% if current_user.admin? %>
              <%= link_to "Admin Dashboard", admin_root_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
              <%= link_to "Manage Users", admin_users_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
            <% end %>
          </nav>
        </div>
      <% else %>
        <div class="space-y-4">
          <h4 class="text-lg font-semibold">Get Started</h4>
          <nav class="space-y-2">
            <%= link_to "Sign In", new_user_session_path, class: "block text-sm text-gray-300 hover:text-white transition-colors" %>
            <span class="block text-sm text-gray-400">Become a member today!</span>
          </nav>
        </div>
      <% end %>

      <!-- Contact & Legal -->
