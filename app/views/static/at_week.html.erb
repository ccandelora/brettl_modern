              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
            </svg>
            <span class="text-gray-300">1 George Street, Bartlett Village, NH</span>
          </div>
        </div>
      </div>
      
      <!-- Map/Location -->
      <div class="bg-gray-800 rounded-2xl p-8">
        <h3 class="text-xl font-semibold text-white mb-6">Find Our Lodge</h3>
        <p class="text-gray-300 mb-4">
          Located in the heart of New Hampshire's hiking country with easy access to the Appalachian Trail and surrounding peaks.
        </p>
        <a href="https://www.google.com/maps?q=1+George+Street,+Bartlett,+NH" target="_blank" class="inline-flex items-center text-green-400 hover:text-green-300 font-medium">
          <svg class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          View on Google Maps
        </a>
      </div>
    </div>
    
    <div class="mt-12 text-center">
      <div class="inline-flex items-center justify-center space-x-6">
        <%= link_to root_path, class: "text-white hover:text-green-400 transition-colors font-medium" do %>
          ← Back to Home
        <% end %>
        <%= link_to "/membership", class: "bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-medium transition-colors" do %>
          Learn About Membership
        <% end %>
      </div>
    </div>
  </div>
</div> 