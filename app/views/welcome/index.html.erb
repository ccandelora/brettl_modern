<!-- Facebook debug script -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Hide loading message once Facebook widget loads
    setTimeout(function() {
      const fbWidget = document.querySelector('.fb-page');
      const loadingDiv = document.getElementById('fb-loading');
      
      if (fbWidget && fbWidget.querySelector('iframe')) {
        if (loadingDiv) loadingDiv.style.display = 'none';
      } else {
        console.log('Facebook widget did not load properly');
        if (loadingDiv) {
          loadingDiv.innerHTML = '<p class="text-gray-500 text-sm">Facebook feed unavailable. Please visit our page directly.</p>';
        }
      }
    }, 3000);
  });
</script>