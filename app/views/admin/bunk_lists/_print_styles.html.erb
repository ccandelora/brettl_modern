<style>
  /* Print-specific styles */
  @media print {
    /* Reset body margins and set paper size */
    @page {
      size: letter portrait;
      margin: 0.5in;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      font-size: 11pt;
      line-height: 1.3;
      background: white;
      color: black;
    }

    /* Header styling */
    .header {
      text-align: center;
      margin-bottom: 20px;
    }

    .header h1 {
      font-size: 18pt;
      margin: 0;
      color: #000;
    }

    .header h2 {
      font-size: 14pt;
      margin: 5px 0;
      color: #333;
    }

    .header p {
      font-size: 11pt;
      margin: 5px 0;
      font-style: italic;
    }

    /* Section titles */
    .section-title {
      background-color: #f0f0f0;
      padding: 5px 10px;
      margin: 15px 0 10px 0;
      font-weight: bold;
      font-size: 12pt;
      page-break-after: avoid;
    }

    /* Room titles */
    .room-title {
      font-weight: bold;
      margin: 10px 0 5px 0;
      font-size: 11pt;
      page-break-after: avoid;
    }

    /* Table styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 15px;
      page-break-inside: avoid;
    }

    th, td {
      border: 1px solid #000;
      padding: 4px 6px;
      text-align: left;
      font-size: 10pt;
    }

    th {
      background-color: #f0f0f0;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    /* Page breaks */
    .page-break {
      page-break-after: always;
    }

    /* Hide non-essential elements */
    nav, footer, .no-print {
      display: none !important;
    }
  }
</style>
