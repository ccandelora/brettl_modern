                                {
                                  include_blank: "Empty",
                                  class: "block w-full rounded-md border-gray-300 text-sm focus:border-pink-500 focus:ring-pink-500",
                                  data: { 'bunk-editor-target': 'assignmentSelect' }
                                } %>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>



